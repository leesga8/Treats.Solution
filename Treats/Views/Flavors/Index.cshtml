@using Treats.Models;
@model List<Treats.Models.Flavor>

<h2>Flavors</h2>

@if(Model.Any())
{
  <ul >
    @foreach(Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}
else
{
  <p class="noCount">You have not created any Flavors yet!</p>
  
}

<p>@Html.ActionLink("Add new Flavor", "Create")</p>