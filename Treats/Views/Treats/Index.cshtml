@using Treats.Models;
@model List<Treats.Models.Treat>;

<h2>Treats</h2>

@if(Model.Count == 0)
{
  <p class="noCount">You have not created any Treats</p>
}
else
{
  <ul class="index-ul">
    @foreach(Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}
<hr />
<p>@Html.ActionLink("Add new Treat", "Create")</p>